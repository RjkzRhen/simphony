{% extends 'base.html.twig' %}

{% block title %}Редактировать номер{% endblock %}

{% block body %}
    <div class="container register-form">
        <div class="form">
            <div class="note">
                <p>Редактировать номер</p>
            </div>

            <div class="form-content">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.value, 'Номер:') }}
                            {{ form_widget(form.value, {'attr': {'class': 'form-control', 'placeholder': 'Номер'}}) }}
                        </div>
                    </div>
                </div>
                <button type="submit" class="btnSubmit">Сохранить</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}