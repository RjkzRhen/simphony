{% extends 'base.html.twig' %}

{% block title %}Two-Factor Authentication{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>Two-Factor Authentication</h4>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}

                        <form method="post" action="{{ path('app_2fa') }}">
                            <div class="form-group">
                                <label for="twoFactorCode">Enter your 2FA code</label>
                                <input type="text" id="twoFactorCode" name="code" class="form-control"
                                       placeholder="6-digit code" maxlength="6" required autofocus>
                            </div>
                            <button type="submit" class="btn btn-primary mt-3 w-100">Verify</button>
                        </form>

                        <p class="text-muted text-center mt-3">
                            Didn't receive the code? <a href="{{ path('app_resend_2fa') }}">Resend code</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
