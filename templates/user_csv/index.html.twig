{% extends 'base.html.twig' %}

{% block title %}Список пользователей из CSV{% endblock %}

{% block body %}
    <h1>Список пользователей из CSV</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th>Имя пользователя</th>
            <th>Пароль</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user[0] }}</td>
                <td>{{ user[1] }}</td>
                <td>{{ user[2] }}</td>
                <td>{{ user[3] }}</td>
                <td>{{ user[4] }}</td>
                <td>{{ user[5] }}</td>
            </tr>
        {% else %}
            <tr class="no-users">
                <td colspan="6">Нет пользователей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_csv_new') }}" class="btn btn-primary">Добавить пользователя в CSV</a>
{% endblock %}
