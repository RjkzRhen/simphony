{% extends 'base.html.twig' %}

{% block title %}Employee Directory - Edit{% endblock %}

{% block body %}
    <h1>Employee Directory - Edit</h1>

    <div class="card">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="row">
                <div class="col-md-4 mb-3">
                    {{ form_label(form.lastName, 'Last Name:', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    <div class="invalid-feedback">
                        Пожалуйста, введите фамилию.
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_label(form.firstName, 'First Name:', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    <div class="invalid-feedback">
                        Пожалуйста, введите имя.
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_label(form.middleName, 'Middle Name:', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.middleName, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    {{ form_label(form.position, 'Position:', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.position, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    <div class="invalid-feedback">
                        Пожалуйста, введите должность.
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_label(form.telegramId, 'Telegram ID:', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.telegramId, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <a href="{{ path('employee_directory_index') }}" class="btn btn-secondary mt-3">Back to list</a>
{% endblock %}