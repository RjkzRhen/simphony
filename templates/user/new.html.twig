{% extends 'base.html.twig' %}

{% block title %}Добавить нового пользователя{% endblock %}

{% block body %}
    <h1>Добавить нового пользователя</h1>

    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.middleName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.age, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" class="btn btn-primary">Создать пользователя</button>
    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('app_users') }}" class="btn btn-secondary">Назад к списку пользователей</a>
    </div>
{% endblock %}