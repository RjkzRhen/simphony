{# templates/user/new.html.twig #}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Добавить нового пользователя</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABz4A1pGCU6UxJQ+76yoQkvZm4M5mPZl6bVZpZy5m6V4I5F5FBR17V0" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 30px;
        }
        .container {
            max-width: 600px;
            background-color: #e8e0e0;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(234, 223, 223, 0.86);
        }
        h1 {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #d21414;
        }
        .btn-primary {
            background-color: #e9eef3;
            border-color: #e8edf1;
        }
        .btn-primary:hover {
            background-color: #f1efef;
            border-color: #eaeef1;
        }
        .btn-secondary {
            background-color: #ffffff;
            border-color: #ffffff;
        }
        .btn-secondary:hover {
            background-color: #f1f1f1;
            border-color: #f3f3f3;
        }
        .form-control {
            border-radius: 8px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Добавить нового пользователя</h1>

    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.middleName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.age, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" class="btn btn-primary">Создать пользователя</button>
    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('app_users') }}" class="btn btn-secondary">Назад к списку пользователей</a>
    </div>
</div>

</body>
</html>
